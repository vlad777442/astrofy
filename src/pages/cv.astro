---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
import profile from "../profile";
---

<BaseLayout title="Resume" sideBarActiveItemID="cv">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Summary</div>
  </div>

  <div class="mb-6 text-justify">
    <p>{profile.headline}</p>
  </div>
  <div class="flex flex-wrap gap-3 mb-10">
    {profile.links.resume && <a class="btn" href={profile.links.resume} target="_blank">Download PDF</a>}
    {profile.links.linkedin && <a class="btn btn-outline" href={profile.links.linkedin} target="_blank">LinkedIn</a>}
    {profile.links.github && <a class="btn btn-outline" href={profile.links.github} target="_blank">GitHub</a>}
  </div>
  {profile.links.resume && (
    <div class="mb-10">
      <iframe src={profile.links.resume} class="w-full h-[800px] border rounded-lg" title="Resume PDF"></iframe>
    </div>
  )}

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Education</div>
  </div>

  <div class="time-line-container grid gap-4 mb-10">
    {profile.education?.length
      ? profile.education.map((e) => (
          <TimeLineElement
            title={e.degree + " — " + e.school}
            subtitle={`${e.start || ""} to ${e.end || ""}${e.location ? ` · ${e.location}` : ""}`}
          >
            {e.details && e.details.length ? e.details.join(" · ") : null}
          </TimeLineElement>
        ))
      : (
        <TimeLineElement title="Add your education in src/profile.ts" subtitle="" />
      )}
  </div>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Experience</div>
  </div>

  <div class="time-line-container mb-10">
    {profile.experience?.length
      ? profile.experience.map((x) => (
          <TimeLineElement
            title={`${x.title} — ${x.company}`}
            subtitle={`From ${x.start || ""} to ${x.end || ""}${x.location ? ` at ${x.location}` : ""}`}
          >
            <ul class="list-disc ml-5">
              {x.bullets?.map((b) => (<li>{b}</li>))}
            </ul>
          </TimeLineElement>
        ))
      : (
        <TimeLineElement title="Add your experience in src/profile.ts" subtitle="" />
      )}
  </div>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Certifications</div>
  </div>

  <ul class="list-disc mx-6 mb-10 grid gap-2">
    <li>Relevant certifications can go here (e.g., AWS, GCP, TensorFlow Developer), or add a section to profile.ts.</li>
  </ul>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Skills</div>
  </div>

  <ul class="list-disc md:columns-5 columns-2 mx-6">
    {(profile.skills || []).map((s) => (<li>{s}</li>))}
  </ul>
</BaseLayout>
